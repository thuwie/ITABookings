{% block body %}
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký phương tiện</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #eef2f7;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
        }

        form {
            max-width: 600px;
            width: 100%;
            background: #fff;
            padding: 25px 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
        }

        h2 {
            text-align: center;
            color: #002b5c;
            margin-bottom: 20px;
        }

        h3 {
            color: #002b5c;
            margin-top: 25px;
            border-bottom: 2px solid #c0c0c0;
            padding-bottom: 5px;
        }

        label {
            font-weight: bold;
            color: #333;
            display: block;
            margin-bottom: 5px;
        }

        input,
        select,
        button,
        textarea {
            width: 100%;
            padding: 8px;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 14px;
            box-sizing: border-box;
        }

        input:focus,
        select:focus,
        textarea:focus {
            outline: none;
            border-color: #004080;
            box-shadow: 0 0 3px rgba(0, 64, 128, 0.3);
        }

        button {
            background-color: #002b5c;
            color: #fff;
            border: none;
            margin-top: 20px;
            cursor: pointer;
            font-size: 16px;
            font-weight: bold;
            padding: 10px;
            border-radius: 5px;
            width: 100%;
        }

        button:hover {
            background-color: #004080;
        }

        .error {
            color: red;
            font-size: 13px;
            margin-top: 3px;
        }

        .success {
            text-align: center;
            color: green;
            margin-top: 10px;
            font-weight: bold;
        }

        .row {
            display: flex;
            gap: 15px;
            margin-bottom: 15px;
        }

        .row .field {
            flex: 1;
        }

        .field-single {
            margin-bottom: 15px;
        }

        select {
            background-color: #fff;
        }

        .representative {
            background-color: #f3f7ff;
            padding: 10px;
            border-left: 4px solid #004080;
            border-radius: 5px;
            margin-bottom: 15px;
            color: #002b5c;
            font-weight: bold;
        }

        .note {
            font-style: italic;
            font-size: 14px;
            color: #ba3636;
            margin-top: -5px;
            margin-bottom: 15px;
            text-align: center;
        }

        /* Toast container góc trên phải */
        #messageContainer {
            position: fixed;
            top: 1rem;
            right: 1rem;
            z-index: 1080;
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        #loadingOverlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            /* màn hình tối */
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 2000;
            /* cao hơn toast và form */
        }

        #utilities-radio {
            height: 210px;
            /* fixed height */
            overflow-y: auto;
            /* enable vertical scrolling */
        }
    </style>
</head>

<body>
    <form id="vehicle-form">
        <h2>Đăng Ký Phương Tiện</h2>

        <!-- Thông tin doanh nghiệp -->
        <h3>Thông tin phương tiện</h3>

        <div class="row">
            <div class="field">
                <label for="brand">Thương hiệu xe</label>
                <input type="text" id="brand" name="brand" placeholder="Ví du: Honda..." required>
            </div>
            <div class="field">
                <label for="model">Dòng xe</label>
                <input type="tel" id="model" name="model" placeholder="Ví dụ: CR-V" required>
            </div>
        </div>

        <div class="row">
            <div class="field">
                <label for="year_of_manufacture">Năm sản xuất</label>
                <input type="text" id="year_of_manufacture" name="year_of_manufacture" placeholder="2011" required>
            </div>
            <div class="field">
                <label for="license_plate">Biển số xe</label>
                <input type="text" id="license_plate" name="license_plate" placeholder="2011" required>
            </div>
        </div>

        <div class="row">
            <div class="field">
                <label for="seat_counting">Số chỗ ngồi</label>
                <select name="seat_counting" id="seat_counting" required>
                    <option value="">-- Chọn số chỗ --</option>
                    <option value="4">4</option>
                    <option value="7">7</option>
                    <option value="16">16</option>
                    <option value="24">24</option>
                    <option value="35">35</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="field">
                <label for="fuel_consumption">Nhiên liệu tiêu thụ/100km (L)</label>
                <input type="text" id="fuel_consumption" name="fuel_consumption" placeholder="6.5" required>
            </div>
            <div class="field">
                <label for="maintenance_per_km">Phí bảo dưỡng/km (VNĐ)</label>
                <input type="text" id="maintenance_per_km" name="maintenance_per_km" placeholder="6,500" required>

            </div>
        </div>

        <div class="field-single">
            <label for="description">Mô tả</label>
            <textarea id="description" name="description" rows="3" placeholder="Giới thiệu ngắn về phương tiện..."
                required></textarea>
        </div>

        <div class="field-single">
            <label for="logo">Hình ảnh về liên quan</label>
            <input type="file" id="files" name="files" accept="image/*" multiple required>
            <div id="imagesPreview" style="display:none; margin-top: 10px;"></div>
        </div>

        <!-- Tiện ích -->
        <h3>Tiện ích của phương tiện</h3>
        <div class="row">
            <div class="field">
                <div class="d-flex gap-2 align-items-center mb-2">
                    <input type="radio" name="utility" id="utilities" style="width: 12px; height: 12px;" value="1"
                        checked>
                    <label for="utilities" style="margin-bottom: 0;">Tiện ích sẵn có</label>
                </div>
                <div id="utilities-radio" class="border rounded-2 p-2">
                </div>
            </div>
            <div class="field">
                <div class="d-flex gap-2 align-items-center mb-2">
                    <input type="radio" name="utility" id="new-utilities" style="width: 12px; height: 12px;" value="0">
                    <label for="new-utilities" style="margin-bottom: 0;">Thêm mới tiện ích</label>
                </div>
                <div class="gap-2 d-flex flex-column" id="multiple_utilities" name="multiple_utilities"
                    style="pointer-events: none; opacity: 0.6;">
                    <div class="d-flex gap-2 align-items-center">
                        <input type="text" id="utility-1" name="utility-1" disabled="true">
                        <i class="bi bi-plus fw-bold text-success fs-5 plus-icon" id="plus-icon"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Thông tin người đại diện -->
        <div class="representative" id="representative">
            {{ authUser.gender == 'female' ? 'Bà' : 'Ông' ?? 'Ông/Bà' }}
            <span id="repName">{{ authUser.first_name }} {{
                authUser.last_name}}</span> là chủ sở hữu của phương tiện này.
        </div>

        <input type="text" class="d-none" name="user_id" id="user_id" value="{{authUser.id}}">
        <!-- Nộp đơn -->
        <button type="submit">Nộp đơn đăng ký doanh nghiệp</button>
    </form>

    <!-- Toast message container -->
    <div id="messageContainer"></div>

    <!-- Loading Overlay -->
    <div id="loadingOverlay" style="display:none;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>


</body>
<script src="/js/vehicles-register-handle.js"></script>

</html>

{% endblock %}