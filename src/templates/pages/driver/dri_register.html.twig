{% block body %}
<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Đăng ký tài xế</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #eef2f7;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      margin: 0;
    }

    form {
      max-width: 600px;
      width: 100%;
      background: #fff;
      padding: 25px 30px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
    }

    h2 {
      text-align: center;
      color: #002b5c;
      margin-bottom: 20px;
    }

    h3 {
      color: #002b5c;
      margin-top: 25px;
      border-bottom: 2px solid #c0c0c0;
      padding-bottom: 5px;
    }

    label {
      font-weight: bold;
      color: #333;
      display: block;
      margin-bottom: 5px;
    }

    input,
    select,
    button {
      width: 100%;
      padding: 8px;
      border-radius: 5px;
      border: 1px solid #ccc;
      font-size: 14px;
      box-sizing: border-box;
    }

    input:focus,
    select:focus {
      outline: none;
      border-color: #004080;
      box-shadow: 0 0 3px rgba(0, 64, 128, 0.3);
    }

    button {
      background-color: #002b5c;
      color: #fff;
      border: none;
      margin-top: 20px;
      cursor: pointer;
      font-size: 16px;
      font-weight: bold;
      padding: 10px;
      border-radius: 5px;
      width: 100%;
    }

    button:hover {
      background-color: #004080;
    }

    .row {
      display: flex;
      gap: 15px;
      margin-bottom: 15px;
    }

    .row .field {
      flex: 1;
    }

    .field-single {
      margin-bottom: 15px;
    }

    select {
      background-color: #fff;
    }

    .note {
      font-style: italic;
      font-size: 14px;
      color: #ba3636;
      margin-top: -5px;
      margin-bottom: 1px;
      text-align: center;
    }

    .representative {
      background-color: #f3f7ff;
      padding: 10px;
      border-left: 4px solid #004080;
      border-radius: 5px;
      margin-bottom: 15px;
      color: #002b5c;
      font-weight: bold;
    }

    .success {
      text-align: center;
      color: green;
      margin-top: 10px;
      font-weight: bold;
    }

    .qr-preview {
      margin-top: 10px;
    }

    .qr-preview img {
      max-width: 150px;
      display: block;
      margin: 5px auto;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    /* Toast container góc trên phải */
    #messageContainer {
      position: fixed;
      top: 1rem;
      right: 1rem;
      z-index: 1080;
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    #loadingOverlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      /* màn hình tối */
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 2000;
      /* cao hơn toast và form */
    }
  </style>
</head>

<body>

  <form id="driverForm" method="POST" action="/driver/register" enctype="multipart/form-data">
    <h2>Đăng Ký Tài Xế</h2>

    <!-- Thông tin cá nhân -->
    <h3>Thông tin cá nhân</h3>
    <div class="row">
      <div class="field">
        <label>Họ</label>
        <input type="text" name="first_name" value="{{user.last_name}}" disabled required />
      </div>
      <div class="field">
        <label>Tên</label>
        <input type="text" name="last_name" value="{{user.first_name}}" disabled required />
      </div>
    </div>

    <!-- Giới tính và ngày sinh -->
    <div class="row">
      <div class="field">
        <label>Giới tính</label>
        <select name="gender" disabled required>
          <option value="male" {% if user.gender=='male' %}selected{% endif %}>Nam</option>
          <option value="female" {% if user.gender=='female' %}selected{% endif %}>Nữ</option>
          <option value="other" {% if user.gender=='other' %}selected{% endif %}>Khác</option>
        </select>
      </div>
      <div class="field">
        <label>Ngày sinh</label>
        <input type="text" name="date_of_birth" value="{{user.date_of_birth}}" disabled required />
      </div>
    </div>

    <!-- Email và số điện thoại -->
    <div class="row">
      <div class="field">
        <label>Email</label>
        <input type="email" name="email" value="{{user.email}}" disabled required />
      </div>
      <div class="field">
        <label>Số điện thoại</label>
        <input type="tel" name="phone_number" value="{{user.phone_number}}" disabled required />
      </div>
    </div>

    <!-- CCCD và Địa chỉ -->
    <div class="row">
      <div class="field">
        <label>Số CCCD</label>
        <input type="text" name="cccd" value="{{user.CCCD}}" disabled required />
      </div>
      <div class="field">
        <label>Địa chỉ</label>
        <input type="text" name="address" value="{{user.address}}" disabled required />
      </div>
    </div>

    <!-- Tỉnh / Thành phố -->
    <div class="field-single">
      <label for="province_id">Chọn tỉnh/thành:</label>
      <select name="province_id" id="province_id" disabled required>
        {% for province in provinces %}
        <option value="{{ province.id }}" {% if province.id == user.province_id %}selected{% endif %}>
          {{ province.name }}
        </option>
        {% endfor %}
      </select>
    </div>

    <!-- Thông tin GPLX -->
    <h3>Thông tin giấy phép lái xe</h3>

    <div class="row">
      <div class="field">
        <label for="license_number">Số GPLX</label>
        <input type="text" id="license_number" name="license_number" placeholder="Nhập số giấy phép lái xe" required>
      </div>
      <div class="field">
        <label for="license_class">Loại bằng</label>
        <select id="license_class" name="license_class" required>
          <option value="">-- Chọn loại bằng --</option>
          <option>B1</option>
          <option>B2</option>
          <option>C</option>
          <option>D</option>
          <option>E</option>
          <option>F</option>
        </select>
      </div>
    </div>

    <div class="row p-lg-2">
      <p class="note">
        *Nếu có 2 bằng trở lên, vui lòng chọn bằng có mức cao hơn*
      </p>
    </div>

    <div class="row">
      <div class="field">
        <label for="license_issue_date">Ngày cấp GPLX</label>
        <input type="date" id="license_issue_date" name="license_issue_date" required>
      </div>
      <div class="field">
        <label for="license_expiry_date">Ngày hết hạn GPLX</label>
        <input type="date" id="license_expiry_date" name="license_expiry_date" required>
      </div>
    </div>

    <div class="field-single">
      <label for="status">Tình trạng GPLX</label>
      <select id="status" name="status" required>
        <option value="">-- Chọn tình trạng --</option>
        <option value="valid">Còn hiệu lực</option>
        <option value="expired">Hết hạn</option>
        <option value="suspended">Bị tạm giữ</option>
      </select>
    </div>

    <!-- Thông tin thanh toán -->
    <h3>Thông tin thanh toán</h3>

    <div class="field-single">
      <label for="bank_name">Ngân hàng</label>
      <select id="bank_name" name="bank_name" required>
        <option value="">-- Chọn ngân hàng --</option>
        <option value="VCB">Vietcombank</option>
        <option value="ACB">ACB</option>
        <option value="TPB">TPBank</option>
        <option value="MB">MB Bank</option>
        <option value="BIDV">BIDV</option>
        <option value="VPB">VPBank</option>
      </select>
    </div>

    <div class="field-single">
      <label for="account_number">Số tài khoản</label>
      <input type="text" id="account_number" name="account_number" placeholder="Nhập số tài khoản ngân hàng" required>
    </div>

    <div class="field-single">
      <label for="full_name_account">Họ và tên đã đăng ký ngân hàng</label>
      <input type="text" id="full_name_account" name="full_name_account" placeholder="Nhập đầy đủ họ tên" required>
    </div>

    <div class="field-single">
      <label for="qr_image">Tải ảnh QR để nhận thanh toán</label>
      <input type="file" id="qr_image" name="qr_image" accept="image/*">
      <div class="qr-preview" id="qrPreview" style="display:none;">
        <img id="qrImagePreview" src="" alt="QR Preview">
      </div>
    </div>

    <!-- Thông tin nhà cung cấp -->
    <h3>Thông tin doanh nghiệp</h3>

    <div class="field-single">
      <label for="bank_name">Danh sách các doanh nghiệp</label>
      <select id="providers" name="providers" required>
        <option value="">-- Chọn doanh nghiệp --</option>
        {% for provider in providers %}
        <option value="{{provider.id}}">{{provider.name}}</option>
        {% endfor %}
      </select>
    </div>


    <!-- Loader -->
    <div id="provider-loader" style="display:none; text-align:center; padding:20px;">
      <div class="spinner-border" role="status"></div>
    </div>

    <div id="provider-details" style="display:none;">
      <!-- Tên -->
      <div class="row">
        <div class="field d-flex gap-2">
          <span class="fw-bold">Tên doanh nghiệp: </span>
          <span type="text" name="name-business" id="name-business"></span>
        </div>
      </div>


      <!-- Mô tả -->
      <div class="row">
        <div>
          <span class="fw-bold">Mô tả: </span>
          <p type="text" name="description-business" id="description-business"></p>
        </div>
      </div>


      <!-- Logo -->
      <div class="field-single">
        <span class="fw-bold">Logo doanh nghiệp: </span>
        <div id="logoPreview" style="margin-top:10px;">
          <img id="logoPreviewImg" alt="Logo Preview" style="max-width:150px; border:1px solid #ccc; padding:5px;">
        </div>
      </div>

      <!-- Email và số điện thoại -->
      <div class="row">
        <div class="field">
          <span class="fw-bold">Email: </span>
          <span type="text" name="email-business" id="email-business"></span>
        </div>
        <div class="field">
          <span class="fw-bold">Số điện thoại: </span>
          <span type="text" name="phone_number_business" id="phone_number_business"></span>
        </div>
      </div>

      <!-- CCCD và Địa chỉ -->
      <div class="row">
        <div class="field">
          <span class="fw-bold">Thuộc tỉnh/thành:</span>
          <select name="province_business" id="province_business" disabled required>
            {% for province in provinces %}
            <option value="{{ province.id }}">
              {{ province.name }}
            </option>
            {% endfor %}
          </select>
        </div>
        <div class="field">
          <span class="fw-bold">Địa chỉ</span>
          <input type="text" name="address-business" id="address-business" disabled required />
        </div>
      </div>

      <!-- Quy mô -->
      <div class="row">
        <div class="field">
          <span class="fw-bold">Quy mô:</span>
          <span type="text" name="business-size" id="business-size">11500 tài xế</span>
        </div>
      </div>
    </div>


    <p class="note">
      *Nhà cung cấp sẽ thanh toán cho tài xế sau khi chuyến đi hoàn thành.*
    </p>

    <!-- Gửi đơn -->
    <button type="submit">Gửi đơn đăng ký</button>
  </form>

  <!-- Toast message container -->
  <div id="messageContainer"></div>

  <!-- Loading Overlay -->
  <div id="loadingOverlay" style="display:none;">
    <div class="spinner-border text-primary" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>
  </div>

  <script src="/js/driver-register-handle.js"></script>
</body>

</html>

{% endblock %}