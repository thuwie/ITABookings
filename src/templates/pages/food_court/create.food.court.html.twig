{% extends 'layouts/location.html.twig' %}


{% block title %}Tạo mới địa điểm du lịch tại các tỉnh{% endblock %}

{% block body %}

<form action="/food-court/create" method="POST" enctype="multipart/form-data">

    <label for="name">Tên:</label>
    <input type="text" id="name" name="name" required>
    <br>

    <label for="description">Mô tả:</label>
    <textarea id="description" name="description" rows="3"></textarea>
    <br>

    <label for="address">Địa chỉ:</label>
    <input type="text" id="address" name="address">
    <br>

    <label for="province_id">Tỉnh/Thành phố:</label>
    <select id="province_id" name="province_id">
        <option value="">-- Chọn Tỉnh/Thành --</option>
        {% for province in provinces %}
        <option value="{{ province.id }}">{{ province.name }}</option>
        {% endfor %}
    </select>
    <br>

    <label for="travel_spot_id">Các địa điểm du lich</label>
    <select id="travel_spot_id" name="travel_spot_id">
        <option value="">-- Chọn địa điểm du lịch --</option>
    </select>
    <br>

    <label for="open_time">Giờ mở cửa:</label>
    <input type="time" id="open_time" name="open_time">
    <br>

    <label for="close_time">Giờ đóng cửa:</label>
    <input type="time" id="close_time" name="close_time">
    <br>

    <label for="price_from">Giá từ:</label>
    <input type="number" id="price_from" name="price_from" step="1000" min="0">
    <br>

    <label for="price_to">Giá cao nhất:</label>
    <input type="number" id="price_to" name="price_to" step="1000" min="0">
    <br>

    <label for="images">Hình ảnh:</label>
    <input type="file" id="images" name="images[]" multiple>
    <br>

    <button type="submit">Create food court</button>
</form>


<script>
    window.travelSpots = JSON.parse("{{ travelSpots | json_encode | e('js') | default('[]') }}");
</script>


{% endblock %}